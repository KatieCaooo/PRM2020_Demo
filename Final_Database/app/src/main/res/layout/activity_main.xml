<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database Demo"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load File From RAW"
        android:onClick="clickToLoadFromRaw"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load File From Internal"
        android:onClick="clickToLoadFromInternal"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save to SD Card"
        android:onClick="clickToSaveSDCard"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load from SD Card"
        android:onClick="clickToLoadSDCard"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Preference"
        android:onClick="clickToAccessPreference"/>
</LinearLayout>